--recurse
--exclude=.git
--exclude=__pycache__
--exclude=build
--exclude=dist
--exclude=node_modules
--exclude=venv
--exclude=*.fasl

# Lisp
--langmap=lisp:.lisp.lsp.cl
--lisp-kinds=+fsv

# Scheme
--langmap=scheme:.scm.ss
--scheme-kinds=+fvd

# JavaScript
--langmap=javascript:.js.jsx.mjs.cjs
--javascript-kinds=+cfv

# Bash
--langmap=sh:.sh.bash
--sh-kinds=+f

# Python
--langmap=python:.py
--python-kinds=+cfv

# HTML
--langmap=html:.html.htm.shtml.xhtml
--html-kinds=+t

# CSS
--langmap=css:.css.scss.sass.less.styl
--css-kinds=+pc

# C
--langmap=c:.c.h
--c-kinds=+pdt

# C++
--langmap=c++:.cpp.hpp.cxx.hxx.cc.hh
--c++-kinds=+pcftvn

# Go
--langmap=go:.go
--go-kinds=+pivct

# Markdown
--langmap=markdown:.md.markdown
--markdown-kinds=+h

--fields=+iaSt
--extra=+q
