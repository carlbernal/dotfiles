[
  // Remap terminal
  {
    "key": "ctrl+`",
    "command": "workbench.action.createTerminalEditor",
    "when": "terminalProcessSupported"
  },
  // Remap quick open
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpen",
    // Keep ctrl + p for cycling completion
    "when": "!suggestWidgetVisible"
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen"
  },
  // Remap command palette
  {
    "key": "shift+ctrl+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "shift+cmd+p",
    "command": "-workbench.action.showCommands"
  },
  // Remap code action
  {
    "key": "ctrl+.",
    "command": "editor.action.quickFix",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+.",
    "command": "-editor.action.quickFix"
  },
  // Remap problems
  {
    "key": "ctrl+enter",
    "command": "workbench.actions.view.toggleProblems",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "cmd+shift+m",
    "command": "-workbench.actions.view.problems"
  },
  // Unmap ctrl+w to ctrl+x for vim window manager
  {
    "key": "ctrl+w",
    "command": "-workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "ctrl+x",
    "command": "workbench.action.closeActiveEditor",
    "when": "vim.mode == 'Normal'"
  },
  // Remap shift + enter to zt
  {
    "key": "shift+enter",
    "command": "vim.remap",
    "when": "vim.mode == 'Normal'",
    "args": {
      "after": ["z", "t"]
    }
  },
  // Remap sidebar toggle
  {
    "key": "ctrl+b",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "vim.mode == 'Normal'"
  },
  {
    "key": "cmd+b",
    "command": "-workbench.action.toggleSidebarVisibility"
  },
  // Remap completion
  {
    "key": "ctrl+n",
    "command": "editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !suggestWidgetVisible"
  },
  {
    "key": "cmd+space",
    "command": "-editor.action.triggerSuggest"
  },
  // Add ctrl + p cycling keymap for command palette
  {
    "key": "ctrl+p",
    "command": "workbench.action.quickOpenSelectPrevious",
    "when": "inQuickOpen"
  },
  // Python slime key maps
  {
    "key": "ctrl+c ctrl+c",
    "command": "python.execSelectionInTerminal",
    "when": "editorTextFocus && editorLangId == 'python'"
  },
  {
    "key": "ctrl+c ctrl+k",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "%run -i ${file}\u000D" },
    "when": "editorTextFocus && editorLangId == 'python'"
  },
  {
    "key": "ctrl+c ctrl+l",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u000c" },
    "when": "editorTextFocus && editorLangId == 'python'"
  },
  // Remap reopen closed editor
  {
    "key": "ctrl+shift+t",
    "command": "workbench.action.reopenClosedEditor"
  },
  {
    "key": "cmd+shift+t",
    "command": "-workbench.action.reopenClosedEditor"
  },
  // Browser Like Navigation
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "cmd+1",
    "command": "workbench.action.openEditorAtIndex1"
  },
  {
    "key": "cmd+2",
    "command": "workbench.action.openEditorAtIndex2"
  },
  {
    "key": "cmd+3",
    "command": "workbench.action.openEditorAtIndex3"
  },
  {
    "key": "cmd+4",
    "command": "workbench.action.openEditorAtIndex4"
  },
  {
    "key": "cmd+5",
    "command": "workbench.action.openEditorAtIndex5"
  },
  {
    "key": "cmd+6",
    "command": "workbench.action.openEditorAtIndex6"
  },
  {
    "key": "cmd+7",
    "command": "workbench.action.openEditorAtIndex7"
  },
  {
    "key": "cmd+8",
    "command": "workbench.action.openEditorAtIndex8"
  },
  {
    "key": "cmd+9",
    "command": "workbench.action.openEditorAtIndex9"
  }
]
